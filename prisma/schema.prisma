generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id                String    @id @default(cuid())
  spotifyUserUri    String    @unique @map("spotify_user_uri")
  username          String    @unique
  profilePictureUrl String    @map("profile_picture_url")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  comments           Comment[]
  likes              Like[]
  currentSongUri    String?    @map("current_song_uri")
  nowPlaying        Song?      @relation(fields: [currentSongUri], references: [spotifySongUri])
  geoLocation       String?    @map("geo_location")

  @@map("users")
}

model Song {
  id             String    @id @default(cuid())
  name           String
  artists        String[]
  spotifySongUri String    @unique @map("spotify_song_uri")
  comments       Comment[]
  likes          Like[]
  playedBy       User[] 

  @@map("songs")
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  text      String
  createdAt DateTime @default(now()) @map("created_at")
  song_id   Song     @relation(fields: [songId], references: [id])
  user_id   User     @relation(fields: [userId], references: [id])

  @@map("comments")
}
model Like {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  song_id   Song     @relation(fields: [songId], references: [id])
  user_id   User     @relation(fields: [userId], references: [id])

  @@map("likes")
}
